<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Categoría de seguridad SISA -->
    <record model="ir.module.category" id="module_category_sisa">
        <field name="name">SISA - AFIP</field>
        <field name="description">Gestión de declaraciones SISA para AFIP</field>
        <field name="sequence">20</field>
    </record>

    <!-- Grupo: Usuario SISA -->
    <record model="res.groups" id="group_sisa_user">
        <field name="name">Usuario SISA</field>
        <field name="category_id" ref="module_category_sisa"/>
        <field name="comment">Puede crear y gestionar declaraciones SISA</field>
    </record>

    <!-- Grupo: Manager SISA -->
    <record model="res.groups" id="group_sisa_manager">
        <field name="name">Manager SISA</field>
        <field name="category_id" ref="module_category_sisa"/>
        <field name="implied_ids" eval="[(4, ref('group_sisa_user'))]"/>
        <field name="comment">Acceso completo a configuración y declaraciones SISA</field>
    </record>

    <!-- Reglas de acceso por compañía -->
    <record model="ir.rule" id="sisa_declaration_company_rule">
        <field name="name">SISA Declaration: multi-company</field>
        <field name="model_id" ref="model_sisa_declaration"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record model="ir.rule" id="sisa_campaign_config_company_rule">
        <field name="name">SISA Campaign Config: multi-company</field>
        <field name="model_id" ref="model_sisa_campaign_config"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

</odoo>