<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista Tree de Declaraciones SISA -->
    <record id="view_sisa_declaration_tree" model="ir.ui.view">
        <field name="name">sisa.declaration.tree</field>
        <field name="model">sisa.declaration</field>
        <field name="arch" type="xml">
            <tree string="Declaraciones SISA" decoration-info="state=='draft'" 
                  decoration-success="state=='presented'" decoration-warning="state=='generated'">
                <field name="display_name"/>
                <field name="declaration_type"/>
                <field name="year"/>
                <field name="generation_date"/>
                <field name="total_surface_ha" sum="Total Superficie"/>
                <field name="total_stock_kg" sum="Total Stock" optional="hide"/>
                <field name="state" decoration-info="state=='draft'" 
                       decoration-success="state=='presented'" decoration-warning="state=='generated'"/>
                <field name="user_id"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form de Declaraciones SISA -->
    <record id="view_sisa_declaration_form" model="ir.ui.view">
        <field name="name">sisa.declaration.form</field>
        <field name="model">sisa.declaration</field>
        <field name="arch" type="xml">
            <form string="Declaración SISA">
                <header>
                    <button name="action_generate_ip1_lines" type="object" 
                            string="Generar Líneas IP1" class="btn-primary"
                            invisible="declaration_type != 'ip1' or state != 'draft'"/>
                    <button name="action_generate_ip2_lines" type="object" 
                            string="Generar Líneas IP2" class="btn-primary"
                            invisible="declaration_type != 'ip2' or state != 'draft'"/>
                    <button name="action_export_afip_file" type="object" 
                            string="Exportar para AFIP" class="btn-success"
                            invisible="state == 'draft'"/>
                    <button name="action_mark_presented" type="object" 
                            string="Marcar como Presentado" class="btn-warning"
                            invisible="state != 'generated'"
                            confirm="¿Está seguro que desea marcar esta declaración como presentada?"/>
                    <button name="action_reset_to_draft" type="object" 
                            string="Volver a Borrador" class="btn-secondary"
                            invisible="state == 'draft'"
                            confirm="¿Está seguro que desea volver al estado borrador? Se perderán las líneas generadas."/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,generated,presented"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_export_afip_file" 
                                class="oe_stat_button" icon="fa-download"
                                invisible="state == 'draft'">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Exportar</span>
                                <span class="o_stat_text">AFIP</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" placeholder="Nombre de la Declaración"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group name="main_info">
                            <field name="declaration_type" required="1"/>
                            <field name="year" required="1"/>
                            <field name="generation_date"/>
                            <field name="stock_cutoff_date" invisible="declaration_type != 'ip1'"/>
                        </group>
                        <group name="summary">
                            <field name="total_surface_ha"/>
                            <field name="total_stock_kg" invisible="declaration_type != 'ip1'"/>
                            <field name="user_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    
                    <group name="export_info" string="Información de Exportación" 
                           invisible="not exported_file_name">
                        <field name="exported_file_name"/>
                        <field name="export_date"/>
                    </group>
                    
                    <notebook>
                        <page string="Existencias de Granos" name="stock_lines" 
                              invisible="declaration_type != 'ip1'">
                            <field name="stock_line_ids" context="{'default_declaration_id': active_id}">
                                <tree editable="bottom">
                                    <field name="product_id" domain="[('categ_id.name', 'ilike', 'grano')]"/>
                                    <field name="location_id" domain="[('usage', '=', 'internal')]"/>
                                    <field name="quantity_kg" sum="Total Kg"/>
                                    <field name="afip_code"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Superficie Declarada" name="surface_lines">
                            <field name="surface_line_ids" context="{'default_declaration_id': active_id}">
                                <tree editable="bottom">
                                    <field name="field_id"/>
                                    <field name="lot_id"/>
                                    <field name="crop_id"/>
                                    <field name="area" sum="Total ha"/>
                                    <field name="real_estate_id"/>
                                    <field name="planting_date"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Observaciones" name="notes">
                            <field name="notes" placeholder="Observaciones adicionales sobre la declaración..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista Search de Declaraciones SISA -->
    <record id="view_sisa_declaration_search" model="ir.ui.view">
        <field name="name">sisa.declaration.search</field>
        <field name="model">sisa.declaration</field>
        <field name="arch" type="xml">
            <search string="Buscar Declaraciones SISA">
                <field name="display_name" string="Nombre"/>
                <field name="year"/>
                <field name="declaration_type"/>
                <field name="user_id"/>
                
                <filter string="Borradores" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Generadas" name="generated" domain="[('state', '=', 'generated')]"/>
                <filter string="Presentadas" name="presented" domain="[('state', '=', 'presented')]"/>
                
                <separator/>
                <filter string="IP1 - Campaña Fina" name="ip1" domain="[('declaration_type', '=', 'ip1')]"/>
                <filter string="IP2 - Campaña Gruesa" name="ip2" domain="[('declaration_type', '=', 'ip2')]"/>
                
                <separator/>
                <filter string="Año Actual" name="current_year" 
                        domain="[('year', '=', context_today.year)]"/>
                <filter string="Año Anterior" name="previous_year" 
                        domain="[('year', '=', context_today.year - 1)]"/>
                
                <group expand="0" string="Agrupar por">
                    <filter string="Tipo de Declaración" name="group_type" 
                            context="{'group_by': 'declaration_type'}"/>
                    <filter string="Año" name="group_year" 
                            context="{'group_by': 'year'}"/>
                    <filter string="Estado" name="group_state" 
                            context="{'group_by': 'state'}"/>
                    <filter string="Usuario" name="group_user" 
                            context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vista Kanban de Declaraciones SISA -->
    <record id="view_sisa_declaration_kanban" model="ir.ui.view">
        <field name="name">sisa.declaration.kanban</field>
        <field name="model">sisa.declaration</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="display_name"/>
                <field name="declaration_type"/>
                <field name="year"/>
                <field name="state"/>
                <field name="total_surface_ha"/>
                <field name="total_stock_kg"/>
                <field name="generation_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="display_name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <span t-if="record.declaration_type.raw_value == 'ip1'" 
                                              class="badge badge-primary">IP1</span>
                                        <span t-if="record.declaration_type.raw_value == 'ip2'" 
                                              class="badge badge-secondary">IP2</span>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_tags_section">
                                        <span class="o_kanban_tag">
                                            <i class="fa fa-calendar"/> 
                                            <t t-esc="record.year.value"/>
                                        </span>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <div t-if="record.total_surface_ha.value">
                                                <i class="fa fa-map-o"/> 
                                                <t t-esc="record.total_surface_ha.value"/> ha
                                            </div>
                                            <div t-if="record.total_stock_kg.value">
                                                <i class="fa fa-cubes"/> 
                                                <t t-esc="Math.round(record.total_stock_kg.value)"/> kg
                                            </div>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <img t-att-src="kanban_image('res.users', 'avatar_128', record.user_id.raw_value)" 
                                                 class="oe_kanban_avatar" width="24" height="24"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Acción principal para Declaraciones SISA -->
    <record id="action_sisa_declaration" model="ir.actions.act_window">
        <field name="name">Declaraciones SISA</field>
        <field name="res_model">sisa.declaration</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cree su primera declaración SISA
            </p>
            <p>
                Las declaraciones SISA permiten cumplir con los regímenes de información 
                IP1 (Campaña Fina) e IP2 (Campaña Gruesa) de AFIP.
            </p>
            <p>
                Use los asistentes para generar automáticamente las declaraciones 
                basándose en los datos de sus módulos de gestión agropecuaria.
            </p>
        </field>
    </record>

</odoo>